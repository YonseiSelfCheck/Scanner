<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScannerActivity">

    <!-- 스피너와 버튼 그룹 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <!-- 관리자 계정 스피너 -->
        <Spinner
            android:id="@+id/spinner_manager"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- 로그아웃 버튼 -->
        <ImageButton
            android:id="@+id/button_log_out"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@android:drawable/ic_lock_power_off"
            app:layout_constraintBottom_toBottomOf="@id/spinner_manager"
            app:layout_constraintStart_toEndOf="@id/spinner_manager"
            app:layout_constraintTop_toTopOf="@id/spinner_manager" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 코드 종류 그룹 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group1">

        <TextView
            android:id="@+id/scan_sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR 코드를 스캔하세요."
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 코드 스캔 영역 -->
    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/zxing_barcode_scanner"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group2"
        app:zxing_scanner_layout="@layout/custom_barcode_scanner"
        tools:ignore="MissingConstraints"></com.journeyapps.barcodescanner.DecoratedBarcodeView>

    <View
        android:id="@+id/dividing_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button"
        app:layout_constraintBottom_toTopOf="@id/view_info_barcode" />

    <Button
        android:id="@+id/view_info_barcode"
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:layout_margin="40dp"
        android:background="@drawable/button"
        android:text="전송하기"
        android:textColor="#000000"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>